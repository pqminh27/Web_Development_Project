                <input type="number" id="numberpeople" name="people" min="1" max="10" class="form-control" required/>
            </div>

            <div class="mb-3" id="mb-3-date">
                <label for="orderdate" class="form-lable">Choose your date:</label>
                <input type="date" id="orderdate" name="date" placeholder="Choose date" class="form-control" required/>
            </div>
            <div class="mb-3" id="mb-3-time">
                <label for="ordertime" class="form-lable">Choose your time:</label>
                <input type="time" id="ordertime" name="time" class="form-control" required/>
            </div>

            <button class="btn btn-primary btn-lg">Book the table</button>
    </section>
